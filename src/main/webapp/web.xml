<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>mate.academy.controllers.IndexController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allDrivers</servlet-name>
        <servlet-class>mate.academy.controllers.GetAllDriversController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>allDrivers</servlet-name>
        <url-pattern>/drivers/all</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createDriver</servlet-name>
        <servlet-class>mate.academy.controllers.CreateDriverController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createDriver</servlet-name>
        <url-pattern>/drivers/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createManufacturer</servlet-name>
        <servlet-class>mate.academy.controllers.CreateManufacturerController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createManufacturer</servlet-name>
        <url-pattern>/manufacturers/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createCar</servlet-name>
        <servlet-class>mate.academy.controllers.CreateCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>createCar</servlet-name>
        <url-pattern>/cars/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addDriverToCar</servlet-name>
        <servlet-class>mate.academy.controllers.AddDriverToCarController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>addDriverToCar</servlet-name>
        <url-pattern>/cars/drivers/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>deleteDriver</servlet-name>
        <servlet-class>mate.academy.controllers.DeleteDriverController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>deleteDriver</servlet-name>
        <url-pattern>/drivers/delete</url-pattern>
    </servlet-mapping>
</web-app>
